<div class="contenidor">
    <div class="contingut">
        <br>
        <div>
            <form method="POST" action="/licencias/actualizar" onsubmit="return validarLicencia()">
                <input hidden type="text" name="licencia" value="<%= licencia %>">
                <h4 class="gestiounidad">Actualice la licencia<br><br>
                    <input type="text" class="removeupdateunitat" name="nuevaLicencia" placeholder="<%= licencia %>"><br>
                </h4>
                <br>
                <div class="btn btn-group rounded">
                    <button id="cancelar" type="button" class="btn btn-secondary" onclick="cancelar()">Cancelar</button>
                </div>
                <div class="btn btn-group rounded">
                    <button type="submit" class="btn btn-warning">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    $('#cancelar').click(function () {
        window.location.href = '/licencias'
    })

    function validarLicencia() {

        if ($('#nuevaLicencia').val() === undefined) {
            alert('Debe introducir la licencia modificada.')
            return false
        } else { return true }

    }

</script>