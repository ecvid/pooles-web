<div class="contenidor">
    <div class="contingut">
        <br>
        <div>
            <form method="POST" action="/licencias/anyadir" onsubmit="return validarLicencia()">
                <h4 class="gestiounidad">Añada la licencia:<br><br>
                    <input id="licencia" type="text" name="licencia" size="50" class="inputnovalicencia" autofocus>
                </h4>
                <br>
                <div class="btn btn-group rounded">
                    <button id="cancelar" type="button" class="btn btn-secondary" onclick="cancelar()">Cancelar</button>
                </div>
                <div class="btn btn-group rounded">
                    <button type="submit" class="btn btn-success">Añadir</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>


    $('#cancelar').click(function () {
        window.location.href = '/licencias'
    })

    function validarLicencia() {

        if ($('#licencia').val() === '') {
            alert('Debe indicar una licencia.')
            return false
        } else { return true }

    }

</script>