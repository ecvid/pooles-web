<div class="contenidor">
    <div class="contingut">
        <br>
        <div>
            <form method="POST" action="/unidades/actualizar" onsubmit="return validarUnidad()">
                <input hidden type="text" name="unidad" value="<%= unidad %>">
                <h4 class="gestiounidad">Actualice la unidad<br><br>
                    <input type="text" class="removeupdateunitat" name="nuevaUnidad" placeholder="<%= unidad %>"><br>
                </h4>
                <br>
                <div class="btn btn-group rounded">
                    <button id="cancelar" type="button" class="btn btn-secondary" onclick="cancelar()">Cancelar</button>
                </div>
                <div class="btn btn-group rounded">
                    <button type="submit" class="btn btn-warning">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    $('#cancelar').click(function () {
        window.location.href = '/unidades'
    })

    function validarUnidad() {

        if ($('#nuevaUnidad').val() === undefined) {
            alert('Debe introducir la unidad modificada.')
            return false
        } else { return true }
    }

</script>